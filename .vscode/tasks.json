{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/apps/backend/Chapi.Api/Chapi.Api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/apps/backend/Chapi.Api/Chapi.Api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/apps/backend/Chapi.Api/Chapi.Api.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-all",
      "command": "dotnet",
      "type": "process",
      "args": ["build", "${workspaceFolder}/Chapi.sln"],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "clean",
      "command": "dotnet",
      "type": "process",
      "args": [
        "clean",
        "${workspaceFolder}/apps/backend/Chapi.Api/Chapi.Api.csproj"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
